{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Total Net Worth Held by the Bottom 50%",
    "subtitle": "Source: FRED",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "subtitleColor": "#97716f",
    "anchor": "start",
    "color": "#a87270"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ChristinaPhm/ChristinaPhm.github.io/main/data/data_FRED-WFRBLB50107.json",
    "format": {"type": "json", "property": "observations"}
  },
  "height": 300,
  "width": 310,
  "mark": {
    "type": "area",
    "line": {
      "color": "#cc9d9b"
    },
    "color": {
      "x1": 1,
      "y1": 1,
      "x2": 1,
      "y2": 0,
      "gradient": "linear",
      "stops": [
        {
          "offset": 0,
          "color": "white"
        },
        {
          "offset": 1,
          "color": "#cc9d9b"
        }
      ]
    }
  },
  "transform": [
    {"calculate": "year(datum.date)", "as": "year"},
    {"filter": "datum.year>minYear"},
    {"filter": "datum.year<maxYear"}
  ],
  "params": [
    {
      "name": "minYear",
      "value": 1989,
      "bind": {
        "input": "range",
        "min": 1989,
        "max": 2021,
        "step": 1,
        "name": "Start Year: "
      }
    },
    {
      "name": "maxYear",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 1989,
        "max": 2021,
        "step": 1,
        "name": "End Year: "
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false, "labelColor": "#b18c87",
        "tickColor": "#b18c87", "domainColor": "#b18c87"}
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": true, "tickCount": 7, "labelColor": "#b18c87",
        "tickColor": "#b18c87", "gridColor": "#cab0ad", "domainColor": "#b18c87"}
    }
  }
}
